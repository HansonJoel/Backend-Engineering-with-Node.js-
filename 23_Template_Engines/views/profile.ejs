<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        background: skyblue;
        font-family: vardana;
        color: white;
        padding: 30px;
      }
      h1 {
        font-size: 48px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
      }
      h2,
      ul {
        font-size: 30px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
      }

      p,
      li {
        font-size: 16px;
        text-align: center;
      }
    </style>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Serving html page from the server</title>
  </head>
  <body>
    <!-- Include reusable navigation bar -->
    <%- include ('partials/nav') %>

    <!-- Injected server-side data -->
    <h1>Welcome to <%= person %> Profile</h1>
    <p><strong>Age: </strong> <%= data.age %></p>
    <p><strong>Job: </strong> <%= data.job %></p>

    <!-- Loop through hobbies array -->
    <h2>Hobbies</h2>
    <ul>
      <% data.hobbies.forEach(function(item){ %>
      <li><%= item %></li>
      <%}); %>
    </ul>
  </body>
</html>
